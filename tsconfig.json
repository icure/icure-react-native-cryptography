{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /* Additional Checks */
    "noUnusedLocals": false /* Report errors on unused locals. */, // TODO: reenable (unused imports!)
    "noUnusedParameters": false /* Report errors on unused parameters. */, // TODO: set to true again
    "noImplicitReturns": true /* Report error when not all code paths in function return a value. */,
    "noFallthroughCasesInSwitch": true /* Report errors for fallthrough cases in switch statement. */,
    "sourceRoot": "./src",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "lib": ["es2017", "es6", "es5", "dom"],
    "skipLibCheck": true,
    "paths": {
      "icure-react-native-crypto": ["./src/index"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "./dist", "./src/__tests__/*"],
  "filesGlob": ["./**/*.ts"]
}
